# API
APP_NAME=Carbon Compliance API
ENV=dev
JWT_SECRET=change_me_super_secret
JWT_ISSUER=carbon-platform
JWT_AUDIENCE=carbon-platform-users
ACCESS_TOKEN_MINUTES=480

# DB
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/carbon

# Storage mode: local | s3
STORAGE_MODE=local

# Local "S3"
LOCAL_S3_ROOT=./data/s3

# AWS S3 (STORAGE_MODE=s3 ise zorunlu)
AWS_REGION=eu-central-1
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_PREFIX=carbon-platform

# Presigned URL
PRESIGN_EXPIRES_SECONDS=900

# Pricing
DEFAULT_ETS_PRICE_EUR_PER_TCO2=75.0

# RLS
RLS_ENABLED=true
